#:kivy 2.1.0
#:import rgba kivy.utils.get_color_from_hex


    
          
                

<RoundedButton@MDFloatingActionButton>:
    icon: "numeric-1"
    theme_icon_color: "Custom"
    md_bg_color: "#fefbff"
    icon_color: "#6851a5"
    size: self.size
    pos: self.pos
          
    
            
            
<EmptySpace@Button>:
    background_color: (0, 0, 0, 0)
    background_normal: ''
    size: self.size
    pos: self.pos
   


<SmartSystem>:
    camera: face_recognition_camera
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
       
       
        KivyCamera:
            id: face_recognition_camera
            size_hint: (1, 1)
                
            
        MDGridLayout:
            cols: 3
            rows: 5
            size_hint: (1, 1)
            padding: 20
            spacing: 20
            
            RoundedButton:
                id: HOME
                text: "HOME"
               
          
            
            RoundedButton:
                id: KivyCamera_verify_btn
                text: 'Open Elevator'
                on_press: root.verify_button_clicked()
               
               
            
            RoundedButton:
                id: KivyCamera_visitor_btn
                text: "I'm a Visitor"

            RoundedButton:
                id: floor_1
                text: "1"

            RoundedButton:
                id: floor_2
                text: "2"

            RoundedButton:
                id: floor_3
                text: "3"
            
            RoundedButton:
                id: floor_4
                text: "4"
            
            RoundedButton:
                id: floor_5
                text: "5"
            
            RoundedButton:
                id: floor_6
                text: "6"

            RoundedButton:
                id: floor_7
                text: "7"
            
            RoundedButton:
                id: floor_8
                text: "8"
            
            RoundedButton:
                id: floor_9
                text: "9"
                           

<KivyCamera>:
    size: self.size
    

   


