#:kivy 2.1.0
#:import rgba kivy.utils.get_color_from_hex
#:set button_background_normal ''
#:set button_color rgba('#5D4FFF')
#:set main_frame_background_color rgba('#FFFFFF')
#:set square_button_height 50
#:set button_margin 20


<FloorButton@Button>:
    size: self.parent.width - 40, 80
    background_normal: ''
    background_color: rgba('#5D4FFF')

<KivyCamera>:
    canvas.before:
        Color:
            rgba: main_frame_background_color
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'horizontal'
        size: root.width, root.height


    FloorButton:
        id: KivyCamera_verify_btn
        text: 'Open Elevator'
        pos: button_margin, KivyCamera_visitor_btn.height + 5 + button_margin



    Button:
        id: KivyCamera_add_btn
        text: '+'
        size: square_button_height, square_button_height
        pos: root.width - 60, root.height - 60
        background_normal: button_background_normal
        background_color: button_color

    FloorButton:
        id: KivyCamera_visitor_btn
        text: "I'm a Visitor"
        pos: button_margin, button_margin

















