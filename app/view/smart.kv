#:kivy 2.1.0
#:import rgba kivy.utils.get_color_from_hex


<RoundedButton@Button>:
    background_color: (0, 0, 0, 0)
    background_normal: ''
    canvas.before: 
        Color:  
            rgba: rgba('#5D4FFF') if self.state == 'normal' else rgba('#A49CFF')
     
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [400]
            
            



<SmartSystem>:
    camera: face_recognition_camera
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
       
        KivyCamera:
            id: face_recognition_camera
            size_hint: (1, 1)
            
            
        GridLayout:
            cols: 3
            rows: 4
            size_hint: (1, 1)
            padding: 20
            spacing: 20


            RoundedButton:
                id: KivyCamera_verify_btn
                text: 'Open Elevator'
               
               
            
            RoundedButton:
                id: KivyCamera_visitor_btn
                text: "I'm a Visitor"
                           

<KivyCamera>:
    size: self.size
    

   


