#:kivy 2.1.0
#:import rgba kivy.utils.get_color_from_hex

<ClientScreen>:
    camera: face_recognition_camera
    MDBoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        adaptive_size: True
        MDIconButton:
            icon: "plus"
            pos_hint: {"center_x": .95, "center_y": .5}
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'admin_screen'             
        KivyCamera:
            id: face_recognition_camera            
      
            
                  
<AdminScreen>:
    MDBoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        adaptive_size: True
        MDIconButton:
            icon: "arrow-left"
          
            on_press: 
                root.manager.transition.direction = 'right'
                root.manager.current = 'client_screen'
   

           

    

   


