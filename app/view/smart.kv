#:kivy 2.1.0
#:import rgba kivy.utils.get_color_from_hex

                

<FloorButton@MDFloatingActionButton>:
    theme_icon_color: "Custom"
    md_bg_color: "#3D6AF2"
    icon_color: "#FFFFFF"
    size: self.size
    size_hint: root.size
   
    
              
            
<EmptySpace@Button>:
    background_color: (0, 0, 0, 0)
    background_normal: ''
    size: self.size
    pos: self.pos
   


<SmartSystem>:
    camera: face_recognition_camera
    MDBoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        adaptive_size: True
       
        KivyCamera:
            id: face_recognition_camera
            size_hint: (1.0, 1.0)
            
                
            
        MDGridLayout:
            cols: 3
            rows: 5
            padding: 20
            spacing: 20
            
            EmptySpace

            FloorButton:
                id: KivyCamera_verify_btn
                icon: "home"
                on_press: root.verify_button_clicked()
        
            EmptySpace      
                   
            FloorButton:
                id: floor_1
                icon: "numeric-1"
              

            FloorButton:
                id: floor_2
                icon: "numeric-2"

            FloorButton:
                id: floor_3
                icon: "numeric-3"
            
            FloorButton:
                id: floor_4
                icon: "numeric-4"
            
            FloorButton:
                id: floor_5
                icon: "numeric-5"
            
            FloorButton:
                id: floor_6
                icon: "numeric-6"

            FloorButton:
                id: floor_7
                icon: "numeric-7"
            
            FloorButton:
                id: floor_8
                icon: "numeric-8"
            
            FloorButton:
                id: floor_9
                icon: "numeric-9"

            EmptySpace  

            FloorButton:
                id: HOME
                icon: "numeric-0"
        
            EmptySpace  
                           

<KivyCamera>:
    size: self.size
  

    

   


